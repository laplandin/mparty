{{#> layouts/base title="Школа" }}
    {{#*inline "content-block"}}
        <div class="container-fluid site-wrapper">
            <div class="row">
                <div class="col-xs-2 index-nav-wrapper">
                    <div class="nav-content-wrapper">
                        {{> components/index-nav/index-nav}}
                        {{> components/socials/socials}}
                    </div>
                </div>
                <div class="col-xs-10 content-wrapper content-wrapper--school">
                    <div class="row">
                        <div class="col-xs-12 school-banner-wrapper">
                            {{> components/banner--content/school-banner}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-offset-1 col-xs-11">
                            {{> components/article-title/article-title title='Действующие филиалы' mod='left'}}
                            {{#each schools}}
                                {{> components/school-item/school-item this}}
                            {{/each}}
                        </div>
                    </div>
                    <div class="school-training-wrapper">
                        {{#each schoolTrain}}
                            {{> components/school-trainings/school-trainings this}}
                        {{/each}}
                    </div>
                    <div class="row">
                        {{> components/schedule-slider/schedule-slider}}
                    </div>
                    <div class="row">
                        <div class="col-xs-offset-1 col-xs-10">
                            {{>components/order-form/order-form}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-offset-5 col-xs-2">
                            {{> components/gradient-btn/gradient-btn value='Записаться' action='modal'}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{> components/modal/modal title='Запись в школу' enroll=true}}
        {{> components/index-footer/index-footer}}
    {{/inline}}

    {{#* inline "scripts-block"}}
        <script src="plugins/parallax/parallax.min.js"></script>
        <script src="plugins/maskedInput/masked.input.js"></script>
        <script src="plugins/jqueryValidate/jquery.validate.js"></script>
    {{/inline}}
{{/layouts/base}}