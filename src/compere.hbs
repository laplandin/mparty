{{#> layouts/base title="Свадьба"}}
    {{#* inline "nav"}}
        {{> components/nav}}
    {{/inline}}

    {{#*inline "content-block"}}
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-2 index-nav-wrapper">
                    <div class="nav-content-wrapper">
                        {{> components/index-nav/index-nav}}
                        {{> components/socials/socials}}
                    </div>
                </div>
                <div class="col-xs-10 content-wrapper content-wrapper--compere">
                    <div class="row">
                        {{> components/banner/banner title='Ведущий' bg='compere'}}
                    </div>
                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1 text-left">
                            {{> components/index-article/index-article title='Ведущий на ваш праздник' text='Вы пока еще даже
                            не представляете каким будет Ваш праздник, сколько трепетных моментов Вы переживете, какие
                            из них будете вновь и вновь перелистывать в памяти в дальнейшем, в какие ощущения захотите
                            вернуться заново, не знаете что именно сделает ЭТОТ день особенным и необыкновенным? Пока
                            что Вы только совершили важный в жизни шаг, приняли или сделали предложение и теперь с
                            головой окунулись в суету подготовки.' mod='left'}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="promo">
                            <img src="img/wedding.jpg" alt="Ведение свадеб" class="promo__img">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            {{> components/video-feed/video-feed}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{> components/index-footer/index-footer}}
    {{/inline}}

    {{#* inline "scripts-block"}}

    {{/inline}}
{{/layouts/base}}